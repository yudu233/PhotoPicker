<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/photo_gallery_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:orientation="vertical"
    android:paddingBottom="@dimen/layout_padding_8dp"
    android:paddingLeft="@dimen/layout_padding_16dp"
    android:paddingRight="@dimen/layout_padding_16dp"
    android:paddingTop="@dimen/layout_padding_8dp">

    <com.rain.crow.weidget.GalleryImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/layout_margin_16dp"
        android:layout_toRightOf="@id/imageView"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_16sp" />

        <TextView
            android:id="@+id/num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_margin_8dp"
            android:textSize="@dimen/text_size_12sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/photo_gallery_select"
        android:layout_width="@dimen/icon_size_20dp"
        android:layout_height="@dimen/icon_size_20dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/layout_margin_16dp"
        android:scaleType="centerCrop" />
</RelativeLayout>